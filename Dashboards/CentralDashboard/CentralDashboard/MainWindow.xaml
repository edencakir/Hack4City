<Window x:Class="CentralDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="430"
        Height="420"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,76">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" Color="DarkBlue" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
        </Grid.Effect>
        <Image Margin="32,52,28,65" Source="Logo.jpg"></Image>
        <TextBlock Text="Team Carrots" Cursor="None" Foreground="DarkBlue" VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center" FontSize="38" FontFamily="Dosis" FontWeight="Medium" Margin="114,0,114,-25">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" Direction="360" Color="Orange" Opacity="1" BlurRadius="6" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
